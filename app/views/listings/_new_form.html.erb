<div id='listing-form-notice'><%= flash[:notice] %></div>
<%= form_for obj.listings.build, remote: true, class: 'form-horizontal' do |f| %>
  <fieldset>
    <h5><strong><u>Create Listing</u></strong></h5>
    <%= f.hidden_field :user_id, value: supplier.user.id %>
    <%= f.hidden_field :listable_id, value: obj.id %>
    <%= f.hidden_field :listable_type, value: obj.class.to_s %>
    <%= f.label :start_date, class: "control-label" %>
    <%= f.date_field :start_date, value: Date.current, class: "form-control" %><br>
    <%= f.label :finish_date, class: "control-label" %>
    <%= f.date_field :finish_date, class: "form-control" %><br>
    <%= f.label :price, class: "control-label" %>
    <%= f.text_field :price, class: "form-control" %><br>
    <%= f.submit class: "btn btn-primary" %> 
  </fieldset>
<% end %>