<script id="reservations-template" type="text/x-handlebars-template">
  <div class='col-md-12'>
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th width='50%'>Type</th>
          <th width='15%'>Start</th>
          <th width='15%'>End</th>
          <th width='10%'>Total</th>
          <th width='10%'>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each reservations as |reservation|}}
          <tr>
            <td width='50%'><a href={{url}} class='reservation-details-link' data-method='get' data-remote='true'>{{description}}</a></td>
            <td width='15%'>{{start_date}}</td>
            <td width='15%'>{{finish_date}}</td>
            <td width='10%'>${{price}}</td>
            <th width='10%'><a href={{url}} data-method='delete'>Cancel</a></th>
          </tr>
        {{/each}}
      </tbody>
    </table> 
  </div>
</script>